    <fragment
        android:id="@+id/nav_gallery"
        android:name="br.com.app.mymovies.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="br.com.app.mymovies.ui.slideshow.SlideshowFragment"
